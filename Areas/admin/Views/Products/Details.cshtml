@model laptrinhweb.Models.Product
@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}
<head>
    <style>
        img {
            height: 150px;
            max-width: 150px;
        }
    </style>
</head>
<h2>Chi tiết sản phẩm</h2>

<div class="container-fluid">
    <div class="di-horizontal">
        <div class="col-md-4">
            <img src=" @Html.DisplayFor(model => model.ProductImage)" />
        </div>
    </div>
        <div class="col-md-8">
            <dl>
                <dt>
                    Tên sản phẩm
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductName)
                </dd>
                <dt>
                    Mô tả
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductDecription)
                </dd>
                <dt>
                    Đơn giá
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ProductPrice)
                </dd>
                <dt>
                    Danh mục
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Category.CategoryName)
                </dd>
            </dl>
        </div>
</div>
<p>
    @Html.ActionLink("Sửa", "Edit", new { id = Model.ProductID }, new { @class = "btn btn-primary btn-sm" }) 
    @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary btn-sm" })
</p>
