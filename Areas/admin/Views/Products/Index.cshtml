@*@model IEnumerable<laptrinhweb.Models.Product>*@

@model laptrinhweb.Models.ViewModel.ProductSearchVM
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}
<html >
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
    <style>
        .search-container,.oder-container {
            padding-top: 20px;
            display: flex;
            justify-content:center;
            align-items: center;
            
        }
        
    </style>
</head>
<body>
   @* Form tìm kiếm *@
    @using (Html.BeginForm("Index","Products",FormMethod.Get))
{
        <div class="form-group search-container">
            @Html.TextBoxFor(m => m.SearchTerm, new
       {
           @class = "from-control",
           placeholder = "Nhập tên, mô tả hoặc chủng loại sản phẩm"
       } )    
            <button type="submit" class="btn btn-primary btn-sm">Tìm kiếm</button>
        </div>
}
    @* Form kết quả tìm kiếm *@
    @Html.Partial("PVListProduct",Model)
</body>
</html>


